
.head{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.head image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
}

.head text{
  display: inline;
  font-size: 30rpx;
  font-weight: bold;
}

.block{
  display: flex;
  flex-direction: row;
  margin-top: 40rpx;
  height: 100rpx;
  width: 650rpx;
  margin-left: 50rpx;
  border-bottom: 1rpx solid #D3D3D3;
}

.block input{
  width: 480rpx;
  margin-left: 20rpx;
}

.block image{
  height: 50rpx;
  width: 50rpx;
}

.modify{
  display: flex;
  flex-direction: row;
}

.done{
  display: flex;
  flex-direction: row;
  margin-left: 20rpx;
}

.done text{
  width: 480rpx;
}

