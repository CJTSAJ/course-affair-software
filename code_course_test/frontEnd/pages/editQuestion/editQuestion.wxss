/* editQuestion.wxss */
.question{
  background-color: white;
  min-height: 300rpx;
  margin-top: 50rpx;
  margin-left: 50rpx;
  margin-right: 50rpx;
  margin-bottom: 50rpx;
  overflow: hidden;
  border-bottom-right-radius:2em;
  box-shadow:8rpx 8rpx 20rpx 5rpx #ABABAB;
}

.questionTitle{
  background-color: #FFF8DC;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 20rpx;
}

.questionTitle text{
  font-family: Georgia, 'Times New Roman', Times, serif;
  font-weight: 700;
}

.questionContent{
  margin-top: 25rpx;
  margin-left: 10rpx;
  padding: 15rpx 35rpx;
  margin-bottom: 50rpx;
}

.choice{
  width: 650rpx;
  background-color: white;
  margin-left: 50rpx;
  margin-top: 50rpx;
  padding-bottom: 20rpx;
  overflow: hidden;
  border-bottom-right-radius:2em;
  box-shadow:8rpx 8rpx 20rpx 5rpx #ABABAB;
}

.choiceTitle{
  background-color: #FFF8DC;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 20rpx;
}

.inputBar{
  margin-top: 15rpx;
  margin-left: 25rpx;
}

.tips{
  font-size: small;
  display: flex;
  flex-direction: row;
  justify-content: center;
  color: #D4D4D4;
}

.addChoice{
  margin-top: 15rpx;
  width: 650rpx;
  margin-left: 50rpx;
  border-bottom-right-radius:2em;
  box-shadow:8rpx 8rpx 20rpx 5rpx #ABABAB;
  margin-bottom: 75rpx;
}

.addChoice button{
  background-color: #FFF8DC;
  font-family: Georgia, 'Times New Roman', Times, serif;
  font-weight: 900;
  border-bottom-right-radius:2em;
  box-shadow:8rpx 8rpx 20rpx 5rpx #ABABAB;
}

.addChoice button::after{
  border:none;
}

.confirm{
  position:fixed; 
  bottom:0;
}

.confirm button{
  color: black;
  font-family: Georgia, 'Times New Roman', Times, serif;
  background-color: #FFF68F;
  width: 750rpx;
  font-weight: 900;
}

.confirm button::after{
  border:none;
}