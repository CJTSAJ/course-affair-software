/* pages/oneTest/oneTest.wxss */

.title{
  margin-top: 50rpx;
  margin-bottom: 30rpx;
  margin-left: 25rpx;
  padding-bottom: 25rpx;
  width: 700rpx;
  overflow: hidden;
  background-color:  #FFF8DC;
  border-bottom-right-radius:2em;
  box-shadow:8rpx 8rpx 20rpx 5rpx #ABABAB;
}

.testName{
  font-family: Georgia, 'Times New Roman', Times, serif;
  font-weight: 900rpx;
  font-size: xx-large;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.time{
  font-family: Georgia, 'Times New Roman', Times, serif;
  font-weight: 900rpx;
  font-size: large;
  color: red;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.question{
  width: 650rpx;
  margin-left: 50rpx;
  margin-top: 50rpx;
  padding-bottom: 20rpx;
  border-bottom-right-radius:2em;
  box-shadow:8rpx 8rpx 20rpx 5rpx #ABABAB;
  background-color: #FFF8DC;
  min-height: 200rpx;
  overflow: hidden;
}


.questionTitle{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 20rpx;
}

.questionTitle text{
  font-family: Georgia, 'Times New Roman', Times, serif;
  font-weight: 700;
}


.questionContent{
  background-color: white;
  padding-top: 15rpx;
  padding-bottom: 15rpx;
  padding-left: 25rpx;
  padding-right: 25rpx;
  display: block;
  white-space: pre-line;
  word-break:break-all;
  min-height: 175rpx;
}
.questionContent text{
  width: 600rpx;
}


.questionChoice{
  margin-bottom: 20rpx;
}

.oneChoice{
  border-bottom: 1rpx solid #cdcdcd;
  display: flex;
  height: 100rpx;
  flex-direction: row;
  align-items: center;
  overflow: hidden;
  padding-top: 15rpx;
  padding-bottom: 15rpx;
  padding-left: 25rpx;
  padding-right: 25rpx;
  white-space:nowrap;
}

.tips{
  font-size: small;
  display: flex;
  flex-direction: row;
  justify-content: center;
  color: #D4D4D4;
}

.mainArea{
  margin-bottom: 150rpx;
}

.submit{
  position:fixed; 
  bottom:0;
}

.submit button{
  color: black;
  font-family: Georgia, 'Times New Roman', Times, serif;
  background-color: #FFF8DC;
  width: 750rpx;
  font-weight: 900;
}

.submit button::after{
  border:none;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
