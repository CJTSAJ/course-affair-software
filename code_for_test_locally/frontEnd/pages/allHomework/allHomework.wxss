.homework{
  width: 700rpx;
  height: 300rpx;
  background-color: white;
  margin-left: 25rpx;
  margin-top: 50rpx;
  overflow: hidden;
  border-bottom-right-radius:2em;
  box-shadow:8rpx 8rpx 20rpx 5rpx #ABABAB;
}

.title{
  background-color: #ffe95c;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 20rpx;
}

.title text{
  font-family: Georgia, 'Times New Roman', Times, serif;
  font-weight: 700;
}

.content{
  margin-left: 10rpx;
  padding: 15rpx 35rpx;
}
.content text{
  font-size: 20rpx;
  color: #555555;
}

.look{
  color: #FF3E96;
}

.releaseHomework{
  position: fixed;
  bottom: 0rpx;
}

.releaseHomework button{
  color: black;
  font-family: Georgia, 'Times New Roman', Times, serif;
  background-color: #FFF68F;
  width: 750rpx;
  font-weight: 900;
}

.releaseHomework button::after{
  border: none;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}