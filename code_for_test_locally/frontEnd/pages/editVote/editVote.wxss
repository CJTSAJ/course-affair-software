/* pages/editVote/editVote.wxss */
.title{
  margin-top: 50rpx;
  margin-bottom: 30rpx;
  margin-left: 25rpx;
  padding-bottom: 25rpx;
  width: 700rpx;
  overflow: hidden;
  background-color:  #FFF8DC;
  border-bottom-right-radius:2em;
  box-shadow:8rpx 8rpx 20rpx 5rpx #ABABAB;
}

.inputBar{
  margin-top: 25rpx;
  width: 520rpx;
  margin-left: 90rpx;
}

.titleInput{
  text-align:center; 
  vertical-align:middel;
  height: 100rpx;
  font-size: 50rpx;
  background-color: white;
}

.inputQuestion{
  width: 600rpx;
}

.tui-picker-content{
  margin-top: 25rpx;
  text-align: center;
  padding-left: 25rpx;
  padding-right: 25rpx;
}
.tui-picker-name{
  height: 80rpx;
  line-height: 80rpx;
}

.tui-picker-detail{
  height: 80rpx;
  line-height: 80rpx;
  background-color: #fff;
  font-size: 35rpx;
  padding: 0 10px;
  overflow: hidden;
}

.vote{
  width: 650rpx;
  margin-left: 50rpx;
  margin-top: 50rpx;
  margin-bottom: 150rpx;
  padding-bottom: 20rpx;
  border-bottom-right-radius:2em;
  box-shadow:8rpx 8rpx 20rpx 5rpx #ABABAB;
  background-color: #FFF8DC;
  min-height: 200rpx;
  overflow: hidden;
}


.voteTitle{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 20rpx;
}

.voteTitle text{
  font-family: Georgia, 'Times New Roman', Times, serif;
  font-weight: 700;
}

.tips{
  margin-top: 15rpx;
  font-size: small;
  display: flex;
  flex-direction: row;
  justify-content: center;
  color: #D4D4D4;
}

.voteContent{
  background-color: white;
  padding-top: 15rpx;
  padding-bottom: 15rpx;
  padding-left: 25rpx;
  padding-right: 25rpx;
  display: block;
  white-space: pre-line;
  word-break:break-all;
}
.voteContent text{
  width: 600rpx;
}

.voteNull{
  color: #cdcdcd;
}

.voteChoice{
  margin-bottom: 20rpx;
}

.oneChoice{
  border-bottom: 1rpx solid #cdcdcd;
  display: flex;
  height: 120rpx;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  overflow: hidden;
}

.choiceEdit {
  padding-top: 15rpx;
  padding-bottom: 15rpx;
  padding-left: 25rpx;
  padding-right: 25rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  white-space:nowrap;
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(200rpx);
  transform: translateX(200rpx);
  margin-right:0;
  margin-left: -200rpx;
}

.delChoice {
  background-color: orangered;
  width: 200rpx;
  height: 120rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  -webkit-transform: translateX(200rpx);
  transform: translateX(200rpx);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  white-space:nowrap;
}

.touch-move-active .choiceEdit{
  -webkit-transform: translateX(0);
  transform: translateX(0);
}

.touch-move-active .delChoice {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}



.submit{
  position:fixed; 
  bottom:0;
}

.submit button{
  color: black;
  font-family: Georgia, 'Times New Roman', Times, serif;
  background-color: #FFF68F;
  width: 750rpx;
  font-weight: 900;
}

.submit button::after{
  border:none;
}