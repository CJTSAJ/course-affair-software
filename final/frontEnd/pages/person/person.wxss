
.head{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.head image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
}

.head text{
  display: inline;
  font-size: 30rpx;
  font-weight: bold;
}

.block{
  display: flex;
  flex-direction: row;
  margin-top: 40rpx;
  width: 650rpx;
  margin-left: 50rpx;
  border-bottom: 1rpx solid #D3D3D3;
  padding-bottom: 20rpx;
}

.block input{
  width: 480rpx;
  margin-left: 20rpx;
}

button{
  margin-left: 75rpx;
  width: 600rpx;
  background-color: #ffe95c;
}
