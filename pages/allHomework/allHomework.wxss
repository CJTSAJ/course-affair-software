.homework{
  width: 700rpx;
  height: 300rpx;
  background-color: white;
  margin-top: 50rpx;
  overflow: hidden;
  margin-left: 25rpx;
}

.title{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #D3D3D3;
}

.content{
  margin-left: 10rpx;
}
.content text{
  font-size: 20rpx;
  color: gray;
}

.look{
  color: blue;
}

.releaseHomework{
  position: fixed;
  bottom: 0rpx;
}

.releaseHomework button{
  width: 750rpx;
  background-color: black;
  color: white;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}