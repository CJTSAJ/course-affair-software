/* pages/editQuestionContent/editQuestionContent.wxss */

.question{
  background-color: white;
  margin-top: 50rpx;
  margin-left: 50rpx;
  width: 650rpx;
  margin-bottom: 50rpx;
  overflow: hidden;
  border-bottom-right-radius:2em;
  box-shadow:8rpx 8rpx 20rpx 5rpx #ABABAB;
}

.questionTitle{
  background-color: #FFF8DC;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 20rpx;
}

.questionTitle text{
  font-family: Georgia, 'Times New Roman', Times, serif;
  font-weight: 700;
}

.questionContent{
  display: block; 
  white-space: pre-wrap;
  padding-right: 25rpx;
  padding-left: 25rpx;
  padding-top: 25rpx;
  padding-bottom: 25rpx;
}

.inputQuestion{
  width: 600rpx;
  min-height: 550rpx;
  max-height: 800rpx;
}


.bottomButton{
  position:fixed; 
  bottom:40rpx;
}
.cancel{
  width: 315rpx;
  display: inline-block;
  background-color: #D3D3D3;
  margin-left: 40rpx;
  margin-right: 40rpx;
  box-shadow:8rpx 8rpx 20rpx 5rpx #ABABAB;
}
.cancel::after{
  border:none;
}

.confirm{
  width: 315rpx;
  display: inline-block;
  background-color: #FFF68F;
  box-shadow:8rpx 8rpx 20rpx 3rpx #ABABAB;
}

.confirm::after{
  border:none;
}