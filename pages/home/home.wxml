<view class='container'>
  <view>
    <swiper class="swiper_box" indicator-dots="{{indicatorDots}}" vertical="{{vertical}}"
            autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
     <block wx:for="{{images}}" wx:for-item="value">
            <swiper-item class='swiper_img'>
                <image src="{{value}}" class="slide-image"/>
            </swiper-item>
        </block>
    </swiper>
  </view>

  <view class='allNav'>
    <view class='firstLine'>
    <view class='nav'>
      <image src='/images/icons/file.png'></image>
      <text>文件</text>
    </view>
    <view class='nav'>
      <image src='/images/icons/sign.png'></image>
      <text>签到</text>
    </view>
    <view class='nav'>
      <image src='/images/icons/notice.png'></image>
      <text>公告</text>
    </view>
    <view class='nav'>
      <image src='/images/icons/test.png'></image>
      <text>测验</text>
    </view>
  </view>
    
  <view class='firstLine'>
    <view class='nav'>
      <image src='/images/icons/homework.png'></image>
      <text>作业</text>
    </view>
    <view class='nav'>
      <image src='/images/icons/vote.png'></image>
      <text>投票</text>
    </view>
    <view class='nav'>
      <image src='/images/icons/random.png'></image>
      <text>随机</text>
    </view>
    <view class='nav' bindtap='toManage'>
      <image src='/images/icons/manage.png'></image>
      <text>管理</text>
    </view>
  </view>
  </view>

  <view style='margin-top: 30rpx;'>
    <text style='font-weight: bold'>最新公告</text>
    <navigator class='information' wx:for="{{recentNotification}}" wx:for-index="key" wx:for-item="value" url='/pages/homework/homework?time={{value.notificationDate}}&content={{value.notificationContent}}'>
      <view class='title'>
        <text class='time'>{{value.notificationDate}}</text>
      </view>
      <view class='content'>
        <text>{{value.notificationContent}}</text>
      </view>
    </navigator>
  </view>

  <view style='margin-top: 30rpx;'>
    <text style='font-weight: bold'>最新作业</text>
    <navigator url='/pages/homework/homework?time={{value.hwdate}}&content={{value.homeworkContent}}' class='information' wx:for="{{recentHomework}}" wx:for-index="key" wx:for-item="value">
      <view class='title'>
        <text class='time'>{{value.hwdate}}</text>
      </view>
      <view class='content'>
        <text>{{value.homeworkContent}}</text>
      </view>
    </navigator>
    </view>
</view>